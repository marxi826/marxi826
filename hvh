							if (globals.g.missed_shots[missed_player] < 1)
							{
								animstate->m_flGoalFeetYaw = math::normalize_yaw(m_flEyeYaw - 60.f);
							}
							else
							{
								animstate->m_flGoalFeetYaw = math::normalize_yaw(m_flEyeYaw + 60.f);
								switch (globals.g.missed_shots[missed_player] > 1)
								{
