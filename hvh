											{
											case 0:
												animstate->m_flGoalFeetYaw = math::normalize_yaw(m_flEyeYaw + 30.f);
												break;
											case 1:
												animstate->m_flGoalFeetYaw = math::normalize_yaw(m_flEyeYaw - 30.f);
												break;
